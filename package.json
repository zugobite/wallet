{
  "name": "wallet",
  "version": "1.0.0",
  "description": "A secure, production-ready wallet transaction API with two-phase debit authorization",
  "type": "module",
  "main": "src/app.mjs",
  "scripts": {
    "dev": "node src/app.mjs",
    "start": "node src/app.mjs",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest tests/integration",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' jest tests/e2e",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.{js,mjs}'"
  },
  "dependencies": {
    "@prisma/adapter-mariadb": "~7.2.0",
    "@prisma/client": "~7.2.0",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.66.4",
    "cors": "^2.8.5",
    "express": "~4.22.1",
    "express-rate-limit": "^8.2.1",
    "geoip-lite": "^1.4.10",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "mariadb": "~3.4.5",
    "monetra": "~1.2.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "redis": "^5.10.0",
    "serverless-http": "~4.0.0",
    "ua-parser-js": "^2.0.7",
    "uuid": "~13.0.0",
    "zod": "~4.3.4"
  },
  "devDependencies": {
    "dotenv": "~17.2.3",
    "eslint": "^9.39.2",
    "jest": "~30.2.0",
    "prettier": "^3.7.4",
    "prisma": "~7.2.0",
    "supertest": "~7.1.4"
  }
}
